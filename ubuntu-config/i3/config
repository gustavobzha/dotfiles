### My custom bindings

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Set window borders to plain borders
for_window [all] border pixel 4
# for_window [class="^.*"] border pixel 4 -- You can use regex to achieve multiple classes

## For find class use command 'xprop'
# instance is the first result on WM_CLASS
# class is the second result on WM_CLASS
# title is the first result on WM_NAME
# more info in: https://i3wm.org/docs/userguide.html#command_criteria
#
# set floating window for calculator
for_window [class="gnome-calculator"] floating enable, move position center

# set floating for pavucontrol
for_window [class="Pavucontrol"] floating enable, resize 875 1080, move position center

# set floating for copyq
for_window [class="copyq"] floating enable, resize 1048 712

# set floating for ColorPicker
for_window [class="ColorPicker"] floating enable, resize 827 639, move postion center

# set floating for kruler
for_window [class="kruler"] floating enable

# set floating for BitWarden
for_window [title="Bitwarden"] floating enable

# gnome-calendar
for_window [class="gnome-calendar"] floating enable, resize 1000 700, move position center

# Another examples
# # 1. Defines window should be tiled (split) as default
#for_window [class="SeuClass"] floating disable
#
# # 2. When force floating, applies specific size
